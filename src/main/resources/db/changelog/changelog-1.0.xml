<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Siim">
        <createTable tableName="author">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text"/>
        </createTable>

        <createTable tableName="book">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="description" type="text"/>
            <column name="name" type="text"/>
            <column name="author_id" type="int">
                <constraints foreignKeyName="fk_book_author" references="author(id)"/>
            </column>
        </createTable>

    </changeSet>
    <changeSet id="23-11-2012" author="Tristan Veskilt">
        <createTable tableName="bank_client">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="text"/>
            <column name="last_name" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="23-11-2021 add adress" author="Tristan Veskilt">
        <addColumn tableName="bank_client">
            <column name="address" type="text"/>
        </addColumn>
    </changeSet>
    <changeSet id="23-11-2021" author="Tristan Veskilt">
        <createTable tableName="bank_account">
            <column name="account_nr" type="text">
                <constraints primaryKey="true"/>
            </column>
            <column name="client_id" type="int">
                <constraints foreignKeyName="client_id" references="bank_client(id)"/>
            </column>
            <column name="balance" type="int"/>
            <column name="is_locked" type="boolean"/>
        </createTable>
        <createTable tableName="employee">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="text"/>
            <column name="last_name" type="text"/>
            <column name="position" type="text"/>
            <column name="address" type="text"/>
        </createTable>
        <createTable tableName="transaction_history">
            <column name="account_nr" type="text"/>
            <column name="transaction_type" type="text"/>
            <column name="amount" type="int"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
